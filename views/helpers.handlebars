<button type="submit" id="logout">Logout</button>
<form id="helper-form">
<div class="flex-container">
    <section class="helper-header">
        <div>
            <h1>Profile</h1>
        </div>

    </section>
    <section class="user-form" data-helper = "{{helper.id}}">
        <div class="row">
            <div class="column helper-name" id="helper-name">{{ helper.first_name }} {{ helper.last_name }}</div>
            <div class="column helper-title" id="helper-title">{{ helper.role_title}}</div>
        </div>
        <div class="row">
            <div class="column helper-location" id="helper-location">{{ helper.location }}</div>
            <div class="column helper-progress" id="helper-progress">{{ helper.username }}</div>
        </div>
    </section>
    
    <section class="task-section">
        <div class="task-bar">
            <button class="taskBar-btn location-btn">Location</button>
            <button class="taskBar-btn availTask-btn" id="availTaskBtn" >Available Tasks</button>
            <button class="taskBar-btn acceptTask-btn">Accepted Tasks</button>
            <button class="taskBar-btn completeTask-btn">Completed Tasks</button>
        </div>
        <table id="table" style="width: 100%">
            <tr class="table-row">
                <th class="tHead task-header" style="width: 15%;">Task</th>
                {{!-- <th class="details-column" style="width: 25%;">Details</th> --}}
                <th class="tHead" style="width: 15%;">User</th>
                <th class="tHead" style="width: 20%;">Time</th>
                <th class="tHead" style="width: 15%;">Location</th>
                <th class="tHead action-header" style="width: 13%;">Actions</th>
                <th class="tHead blank-header" style="width: 5%;"></th>
                <th class="tHead blank-header" style="width: 5%;"></th>
            </tr>
            {{!-- <tr>
                <td class="task-items">Task test</td>
                <td>client test</td>
                <td>Time test</td>
                <td>Location test</td>
                <td><button class="details-button">Get Details</button></td>
                <td><button class="accept-button">Accept</button></td>
                <td><button class="decline-button">Decline</button></td>
            </tr> --}}
        </table>
    </section>
</div>
<!-- Modal based on code from W3schools.com -->
<div id="modal" class="modal">
    <div class="m-box">
        <div class="m-header">
            <span class="close">&times;</span>
            <h2 id="task-title-modal"></h2>
        </div>
        <div class="m-body">
            <p id="m-body"></p>
        </div>
    </div>
</div>
</form>

<script src="../js/helper.js"></script>